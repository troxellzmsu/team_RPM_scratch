<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hello_World.MainPage">

    <ScrollView>
        <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label x:Name="Points" Text="Points: 0" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
            <Label x:Name="Messages" Text=" " HorizontalTextAlignment="Center" />
        <Button Text="Earn Points" Clicked="Handle_Clicked"/>
        <StackLayout x:Name="ToDo">
            <Label Text="Redeem Points:" HorizontalTextAlignment="Center" FontSize="36"></Label>

        </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>

